# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=bacterial_user
POSTGRES_PASSWORD=password
POSTGRES_DB=bacterial_classification
POSTGRES_HOST_PORT=5437
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# API Settings
SECRET_KEY=supersecretkey0123456789abcdefghijklm
API_V1_STR=/api
PROJECT_NAME="Bacteria Classification API"
ENVIRONMENT=development
BACKEND_PORT=8000

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Scraper Settings
SCRAPING_DELAY=2.0
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
SCRAPER_MAX_RETRIES=3
SCRAPER_REQUEST_TIMEOUT=30
DUPLICATE_ACTION=update
CONTINUE_ON_ERROR=true
MAX_BACTERIA=25

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# Application settings
FRONTEND_URL=http://localhost:3000

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days in minutes
ALGORITHM=HS256
